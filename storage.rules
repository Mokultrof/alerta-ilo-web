rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // REGLAS TEMPORALES MUY PERMISIVAS PARA DEBUGGING
    // TODO: Hacer más restrictivas en producción
    
    // Rules for report images - MÁXIMA PERMISIVIDAD
    match /reports/images/{imageId} {
      allow read: if true; // Permitir lectura a todos
      allow write: if request.auth != null; // Solo validar autenticación
      allow delete: if request.auth != null;
    }
    
    // Rules for profile images
    match /profiles/{userId}/{imageId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regla de fallback MUY permisiva para debugging
    match /{allPaths=**} {
      allow read: if true; // Lectura libre para debugging
      allow write: if request.auth != null && 
        request.resource.size < 10 * 1024 * 1024; // Solo validar tamaño y auth
      allow delete: if request.auth != null;
    }
  }
}